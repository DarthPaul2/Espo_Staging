{
    "hooks": {
        "beforeSave": [
            "AutoInventarnummer"
        ]
    },
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "pattern": "$noBadCharacters",
            "options": []
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user",
            "defaultAttributes": {
                "assignedUserId": "689da665ab072995d",
                "assignedUserName": "Jerome Van Hoegaerden"
            }
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "inventarnummer": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true,
            "default": null
        },
        "seriennummer": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true
        },
        "kategorie": {
            "type": "enum",
            "options": [
                "Werkzeug",
                "Maschine",
                "Prüfgerät",
                "Fahrzeug-Zubehör",
                "Sonstiges"
            ],
            "style": {
                "Werkzeug": null,
                "Maschine": null,
                "Prüfgerät": null,
                "Fahrzeug-Zubehör": null,
                "Sonstiges": null
            },
            "default": "Werkzeug",
            "maxLength": 100,
            "isCustom": true
        },
        "zustand": {
            "type": "enum",
            "options": [
                "funktionsfähig",
                "defekt",
                "inReparatur",
                "verloren",
                "außerBetrieb"
            ],
            "style": {
                "funktionsfähig": null,
                "defekt": "danger",
                "inReparatur": "info",
                "verloren": "danger",
                "außerBetrieb": null
            },
            "default": "funktionsfähig",
            "maxLength": 100,
            "isCustom": true,
            "displayAsLabel": true
        },
        "letztePruefung": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "naechstePruefung": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "dokumente": {
            "type": "attachmentMultiple",
            "previewSize": "medium",
            "sourceList": [],
            "accept": [],
            "isCustom": true
        },
        "ausgegebenAm": {
            "notNull": false,
            "type": "datetime",
            "minuteStep": 30,
            "isCustom": true,
            "readOnly": true
        },
        "zurckgegebenAm": {
            "notNull": false,
            "type": "datetime",
            "minuteStep": 30,
            "isCustom": true,
            "readOnly": true
        },
        "standort": {
            "type": "enum",
            "options": [
                "lager",
                "inBenutzung"
            ],
            "style": {
                "lager": "success",
                "inBenutzung": "warning"
            },
            "default": "lager",
            "maxLength": 100,
            "isCustom": true
        },
        "barcode": {
            "type": "barcode",
            "len": 255,
            "codeType": "EAN13",
            "isCustom": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "dokumente": {
            "type": "hasChildren",
            "entity": "Attachment",
            "foreign": "parent",
            "layoutRelationshipsDisabled": true,
            "relationName": "attachments",
            "utility": true
        },
        "accounts": {
            "type": "hasMany",
            "foreign": "cWerkzeug",
            "entity": "Account",
            "audited": false,
            "isCustom": true
        },
        "auftrags": {
            "type": "hasMany",
            "relationName": "cWerkzeugAuftrag",
            "foreign": "werkzeugs",
            "entity": "CAuftrag",
            "audited": false,
            "isCustom": true
        },
        "lieferscheins": {
            "type": "hasMany",
            "relationName": "cWerkzeugLieferschein",
            "foreign": "werkzeugs",
            "entity": "CLieferschein",
            "audited": false,
            "isCustom": true
        },
        "documents": {
            "type": "hasMany",
            "foreign": "cWerkzeug",
            "entity": "Document",
            "audited": false,
            "isCustom": true
        },
        "wartungs": {
            "type": "hasMany",
            "relationName": "cWartungWerkzeug",
            "foreign": "werkzeugs",
            "entity": "CWartung",
            "audited": false,
            "isCustom": true
        },
        "werkzeugausgabes": {
            "type": "hasMany",
            "foreign": "werkzeug",
            "entity": "CWerkzeugausgabe",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "optimisticConcurrencyControl": false
}