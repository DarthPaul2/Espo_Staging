{
    "hooks": {
        "beforeSave": [
            "NameFiller",
            "SetAssignedUserFromAngebotOnCreate"
        ],
        "afterSave": [
            "UpdateAngebotTotals",
            "AutoZwischensummeOnHeader"
        ],
        "afterRemove": [
            "UpdateAngebotTotals"
        ]
    },
    "fields": {
        "materialDescription": {
            "type": "foreign",
            "link": "material",
            "field": "description",
            "isCustom": true
        },
        "materialName": {
            "type": "foreign-varchar",
            "link": "material",
            "field": "name",
            "isCustom": true,
            "view": "views/fields/foreign-varchar"
        },
        "name": {
            "type": "varchar",
            "required": false,
            "pattern": "$noBadCharacters",
            "options": [],
            "nameField": true
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "menge": {
            "notNull": false,
            "type": "float",
            "isCustom": true
        },
        "einheit": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true
        },
        "preis": {
            "notNull": false,
            "type": "float",
            "isCustom": true
        },
        "einkaufspreis": {
            "notNull": false,
            "type": "float",
            "isCustom": true
        },
        "steuer": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true
        },
        "rabatt": {
            "notNull": false,
            "type": "float",
            "isCustom": true,
            "default": 0
        },
        "gesamt": {
            "notNull": false,
            "type": "float",
            "isCustom": true,
            "readOnly": false,
            "readOnlyAfterCreate": false,
            "view": "custom:views/fields/gesamt"
        },
        "beschreibung": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 90,
            "isCustom": true
        },
        "sortierung": {
            "type": "int",
            "isCustom": true
        },
        "angebot": {
            "type": "link"
        },
        "material": {
            "type": "link"
        },
        "angebotOption13b": {
            "readOnly": true,
            "type": "foreign",
            "link": "angebot",
            "field": "gesetzOption13b",
            "view": "views/fields/foreign-bool",
            "isCustom": true
        },
        "angebotOption12": {
            "readOnly": true,
            "type": "foreign",
            "link": "angebot",
            "field": "gesetzOption12",
            "view": "views/fields/foreign-bool",
            "isCustom": true
        },
        "netto": {
            "notNull": false,
            "type": "float",
            "isCustom": true,
            "readOnly": false,
            "view": "custom:views/fields/netto"
        },
        "materialPreis": {
            "readOnly": true,
            "type": "foreign",
            "link": "material",
            "field": "preis",
            "view": "views/fields/foreign-float",
            "isCustom": true
        },
        "materialEinheit": {
            "readOnly": true,
            "type": "foreign",
            "link": "material",
            "field": "einheit",
            "view": "views/fields/foreign-varchar",
            "isCustom": true
        },
        "positionsNummer": {
            "type": "varchar",
            "maxLength": 20,
            "options": [],
            "isCustom": true
        },
        "positionType": {
            "type": "enum",
            "options": [
                "normal",
                "header",
                "summary"
            ],
            "style": {
                "normal": null,
                "header": null,
                "summary": null
            },
            "default": "normal",
            "maxLength": 100,
            "isCustom": true
        },
        "titel": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true
        },
        "positionsNummerHinweis": {
            "type": "varchar",
            "maxLength": 100,
            "default": "Beispiel: 1Z, 2Z, 3Z, ...",
            "readOnly": true,
            "options": [],
            "isCustom": true,
            "tooltip": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "angebot": {
            "type": "belongsTo",
            "foreignKey": "angebotId",
            "entity": "CAngebot",
            "audited": false,
            "isCustom": true
        },
        "material": {
            "type": "belongsTo",
            "foreign": "positionen",
            "entity": "CMaterial",
            "audited": false,
            "isCustom": true
        },
        "auftragspositions": {
            "type": "hasMany",
            "foreign": "angebotsposition",
            "entity": "CAuftragsposition",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "positionsNummer",
        "order": "asc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "dynamicLogic": {
        "enabled": true
    },
    "optimisticConcurrencyControl": false
}