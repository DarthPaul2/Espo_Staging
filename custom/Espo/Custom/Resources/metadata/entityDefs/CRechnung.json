{
    "hooks": {
        "beforeSave": [
            "AutoNumber",
            "BemerkungVorlage"
        ],
        "afterSave": [
            "AngebotImporter",
            "UpdateRechnungTotals"
        ]
    },
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "pattern": "$noBadCharacters",
            "options": []
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "rechnungsnummer": {
            "type": "varchar",
            "maxLength": 100,
            "readOnlyAfterCreate": true,
            "options": [],
            "isCustom": true
        },
        "einleitung": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "isCustom": true
        },
        "bemerkung": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "isCustom": true
        },
        "betragNetto": {
            "notNull": false,
            "type": "float",
            "readOnlyAfterCreate": true,
            "isCustom": true
        },
        "betragBrutto": {
            "notNull": false,
            "type": "float",
            "readOnlyAfterCreate": true,
            "isCustom": true
        },
        "ustBetrag": {
            "notNull": false,
            "type": "float",
            "isCustom": true,
            "readOnlyAfterCreate": true
        },
        "faelligAm": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "leistungsdatumVon": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "leistungsdatumBis": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "gesetzOption13b": {
            "notNull": true,
            "type": "bool",
            "isCustom": true
        },
        "gesetzOption12": {
            "notNull": true,
            "type": "bool",
            "isCustom": true
        },
        "account": {
            "type": "link"
        },
        "accountKundenNr": {
            "readOnly": true,
            "type": "foreign",
            "link": "account",
            "field": "cKundennummer",
            "view": "views/fields/foreign-varchar",
            "isCustom": true
        },
        "angebot": {
            "type": "link"
        },
        "status": {
            "type": "enum",
            "options": [
                "offen",
                "versendet",
                "bezahlt",
                "storniert"
            ],
            "default": "offen",
            "displayAsLabel": true,
            "style": {
                "offen": null,
                "versendet": null,
                "bezahlt": null,
                "storniert": null
            },
            "maxLength": 100,
            "isCustom": true
        },
        "serviceNummer": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true
        },
        "pdfUrl": {
            "type": "url",
            "isCustom": true
        },
        "sachbearbeiter": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true
        },
        "bemerkungVorlage": {
            "type": "enum",
            "options": [
                "Bitte auswählen…",
                "Bitte überweisen Sie den Rechnungsbetrag..."
            ],
            "style": {
                "Bitte auswählen…": null,
                "Bitte überweisen Sie den Rechnungsbetrag...": null
            },
            "default": "Bitte auswählen…",
            "maxLength": 100,
            "isCustom": true
        },
        "auftrag": {
            "type": "link"
        },
        "mahnregel": {
            "type": "link"
        },
        "mahnstufe": {
            "type": "enum",
            "options": [
                "zahlungserinnerung",
                "mahnung1",
                "mahnung2",
                "mahnung3",
                "inkasso"
            ],
            "style": {
                "zahlungserinnerung": null,
                "mahnung1": null,
                "mahnung2": null,
                "mahnung3": null,
                "inkasso": null
            },
            "default": "zahlungserinnerung",
            "maxLength": 100,
            "isCustom": true
        },
        "letzteMahnungAm": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "account": {
            "type": "belongsTo",
            "foreign": "cRechnungs",
            "entity": "Account",
            "audited": false,
            "isCustom": true
        },
        "angebot": {
            "type": "belongsTo",
            "foreign": "rechnungs",
            "entity": "CAngebot",
            "audited": false,
            "isCustom": true
        },
        "rechnungspositions": {
            "type": "hasMany",
            "foreign": "rechnung",
            "entity": "CRechnungsposition",
            "audited": false,
            "isCustom": true
        },
        "auftrag": {
            "type": "belongsTo",
            "foreign": "rechnungs",
            "entity": "CAuftrag",
            "audited": false,
            "isCustom": true
        },
        "lieferscheins": {
            "type": "hasMany",
            "foreign": "rechnung",
            "entity": "CLieferschein",
            "audited": false,
            "isCustom": true
        },
        "mahnregel": {
            "type": "belongsTo",
            "foreign": "rechnungs",
            "entity": "CMahnregel",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "optimisticConcurrencyControl": false
}