{
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "pattern": "$noBadCharacters",
            "options": []
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "rechnung": {
            "type": "link"
        },
        "mahnregel": {
            "type": "link"
        },
        "mahnstufe": {
            "type": "enum",
            "options": [
                "zahlungserinnerung",
                "mahnung1",
                "mahnung2",
                "letztemahnung",
                "inkasso"
            ],
            "style": {
                "zahlungserinnerung": null,
                "mahnung1": null,
                "mahnung2": null,
                "letztemahnung": null,
                "inkasso": null
            },
            "default": "zahlungserinnerung",
            "maxLength": 100,
            "isCustom": true
        },
        "mahngebhr": {
            "type": "currency",
            "isCustom": true
        },
        "status": {
            "type": "enum",
            "options": [
                "Erstellt",
                "Gesendet",
                "Storniert"
            ],
            "default": "Erstellt",
            "style": {
                "Erstellt": null,
                "Gesendet": null,
                "Storniert": null
            },
            "maxLength": 100,
            "isCustom": true
        },
        "gesendetAm": {
            "notNull": false,
            "type": "datetime",
            "minuteStep": 30,
            "isCustom": true
        },
        "pdfUrl": {
            "type": "url",
            "isCustom": true
        },
        "tageUeberfaellig": {
            "type": "int",
            "isCustom": true
        },
        "betragOffen": {
            "type": "currency",
            "isCustom": true
        },
        "bemerkung": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "isCustom": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "rechnung": {
            "type": "belongsTo",
            "foreign": "mahnungs",
            "entity": "CRechnung",
            "audited": false,
            "isCustom": true
        },
        "mahnregel": {
            "type": "belongsTo",
            "foreign": "mahnungs",
            "entity": "CMahnregel",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    }
}