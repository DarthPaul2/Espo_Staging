{
    "hooks": {
        "beforeSave": [
            "NameFiller"
        ],
        "afterSave": [
            "UpdateRechnungTotals"
        ],
        "afterRemove": [
            "UpdateRechnungTotals"
        ]
    },
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "pattern": "$noBadCharacters",
            "options": []
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "menge": {
            "notNull": false,
            "type": "float",
            "isCustom": true
        },
        "einheit": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true
        },
        "preis": {
            "notNull": false,
            "type": "float",
            "isCustom": true
        },
        "einkaufspreis": {
            "notNull": false,
            "type": "float",
            "isCustom": true
        },
        "steuer": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "isCustom": true
        },
        "rabatt": {
            "notNull": false,
            "type": "float",
            "isCustom": true
        },
        "gesamt": {
            "notNull": false,
            "type": "float",
            "isCustom": true,
            "readOnly": false,
            "view": "custom:views/fields/gesamt"
        },
        "sortierung": {
            "type": "int",
            "isCustom": true
        },
        "netto": {
            "notNull": false,
            "type": "float",
            "isCustom": true,
            "readOnly": false,
            "view": "custom:views/fields/netto"
        },
        "material": {
            "type": "link"
        },
        "materialDescription": {
            "readOnly": true,
            "type": "foreign",
            "link": "material",
            "field": "description",
            "view": "views/fields/foreign-text",
            "isCustom": true
        },
        "materialEinheit": {
            "readOnly": true,
            "type": "foreign",
            "link": "material",
            "field": "einheit",
            "view": "views/fields/foreign-varchar",
            "isCustom": true
        },
        "materialPreis": {
            "readOnly": true,
            "type": "foreign",
            "link": "material",
            "field": "preis",
            "view": "views/fields/foreign-float",
            "isCustom": true
        },
        "beschreibung": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "isCustom": true
        },
        "rechnung": {
            "type": "link"
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "material": {
            "type": "belongsTo",
            "foreign": "rechnungspositions",
            "entity": "CMaterial",
            "audited": false,
            "isCustom": true
        },
        "rechnung": {
            "type": "belongsTo",
            "foreign": "rechnungspositions",
            "entity": "CRechnung",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "asc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "optimisticConcurrencyControl": false
}