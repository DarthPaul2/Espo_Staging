{
    "hooks": {
        "beforeSave": [
            "AutoNumber"
        ],
        "afterSave": [
            "UpdateAuftragTotals"
        ],
        "afterRelate": {
            "angebots": [
                "SyncAngebotspositionen"
            ],
            "rechnungs": [
                "UpdateAuftragTotals"
            ]
        },
        "afterUnrelate": {
            "angebots": [
                "SyncAngebotspositionen"
            ],
            "rechnungs": [
                "UpdateAuftragTotals"
            ]
        }
    },
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "pattern": "$noBadCharacters",
            "options": []
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "auftragsnummer": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "readOnlyAfterCreate": true,
            "isCustom": true
        },
        "status": {
            "type": "enum",
            "displayAsLabel": true,
            "options": [
                "offen",
                "in Bearbeitung",
                "abgeschlossen",
                "storniert"
            ],
            "style": {
                "offen": null,
                "in Bearbeitung": null,
                "abgeschlossen": null,
                "storniert": null
            },
            "default": "offen",
            "maxLength": 100,
            "isCustom": true
        },
        "account": {
            "type": "link"
        },
        "accountKundenNr": {
            "readOnly": true,
            "type": "foreign",
            "link": "account",
            "field": "cKundennummer",
            "view": "views/fields/foreign-varchar",
            "isCustom": true
        },
        "bemerkung": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "isCustom": true
        },
        "leistungsdatumVon": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "leistungsdatumBis": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "betragNetto": {
            "type": "float",
            "dbColumn": "betrag_netto",
            "isCustom": true
        },
        "betragBrutto": {
            "type": "float",
            "dbColumn": "betrag_brutto",
            "isCustom": true
        },
        "verrechnetNetto": {
            "type": "float",
            "dbColumn": "verrechnet_netto",
            "isCustom": true
        },
        "verrechnetBrutto": {
            "type": "float",
            "dbColumn": "verrechnet_brutto",
            "isCustom": true
        },
        "pdfUrl": {
            "type": "url",
            "isCustom": true
        },
        "auftragsbestaetigungGesendetAm": {
            "notNull": false,
            "type": "datetime",
            "minuteStep": 30,
            "isCustom": true
        },
        "auftragsbestaetigungGesendetVon": {
            "type": "link"
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "account": {
            "type": "belongsTo",
            "foreign": "cAuftrags",
            "entity": "Account",
            "audited": false,
            "isCustom": true
        },
        "rechnungs": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CRechnung",
            "audited": false,
            "isCustom": true
        },
        "lieferscheins": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CLieferschein",
            "audited": false,
            "isCustom": true
        },
        "angebots": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CAngebot",
            "audited": false,
            "isCustom": true
        },
        "auftragsbestaetigungGesendetVon": {
            "type": "belongsTo",
            "foreign": "cAuftrags",
            "entity": "User",
            "audited": false,
            "isCustom": true
        },
        "auftragspositions": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CAuftragsposition",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "optimisticConcurrencyControl": false
}