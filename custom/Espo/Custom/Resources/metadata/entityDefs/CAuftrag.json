{
    "hooks": {
        "beforeSave": [
            "AutoNumber"
        ],
        "afterSave": [
            "UpdateAuftragTotals"
        ],
        "afterRelate": {
            "angebots": [
                "SyncAngebotspositionen"
            ],
            "rechnungs": [
                "UpdateAuftragTotals"
            ]
        },
        "afterUnrelate": {
            "angebots": [
                "SyncAngebotspositionen"
            ],
            "rechnungs": [
                "UpdateAuftragTotals"
            ]
        }
    },
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "pattern": "$noBadCharacters",
            "options": []
        },
        "description": {
            "type": "text"
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true,
            "view": "views/fields/user"
        },
        "assignedUser": {
            "type": "link",
            "required": false,
            "view": "views/fields/assigned-user"
        },
        "teams": {
            "type": "linkMultiple",
            "view": "views/fields/teams"
        },
        "auftragsnummer": {
            "type": "varchar",
            "maxLength": 100,
            "options": [],
            "readOnlyAfterCreate": true,
            "isCustom": true,
            "required": false
        },
        "status": {
            "type": "enum",
            "displayAsLabel": true,
            "options": [
                "offen",
                "in Bearbeitung",
                "abgeschlossen",
                "storniert"
            ],
            "style": {
                "offen": "danger",
                "in Bearbeitung": "warning",
                "abgeschlossen": "success",
                "storniert": "info"
            },
            "default": "offen",
            "maxLength": 100,
            "isCustom": true
        },
        "account": {
            "type": "link"
        },
        "accountKundenNr": {
            "readOnly": true,
            "type": "foreign",
            "link": "account",
            "field": "cKundennummer",
            "view": "views/fields/foreign-varchar",
            "isCustom": true
        },
        "bemerkung": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "isCustom": true,
            "default": "Wir freuen uns, Ihren Auftrag ausführen zu dürfen und sichern Ihnen eine fachgerechte und zuverlässige Umsetzung zu.  \nFür Rückfragen oder weitere Abstimmungen stehen wir Ihnen selbstverständlich jederzeit gerne zur Verfügung.  \n\nVielen Dank für Ihr Vertrauen – auf eine erfolgreiche Zusammenarbeit!  \n\nIhr KleSec Team"
        },
        "leistungsdatumVon": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "leistungsdatumBis": {
            "notNull": false,
            "type": "date",
            "isCustom": true
        },
        "betragNetto": {
            "notNull": false,
            "type": "float",
            "dbColumn": "betrag_netto",
            "view": "custom:views/fields/betrag-auftrag",
            "isCustom": true,
            "default": 0
        },
        "betragBrutto": {
            "notNull": false,
            "type": "float",
            "dbColumn": "betrag_brutto",
            "view": "custom:views/fields/betrag-auftrag",
            "isCustom": true,
            "default": 0
        },
        "verrechnetNetto": {
            "notNull": false,
            "type": "float",
            "dbColumn": "verrechnet_netto",
            "view": "custom:views/fields/verrechnet-auftrag",
            "isCustom": true,
            "default": 0
        },
        "verrechnetBrutto": {
            "notNull": false,
            "type": "float",
            "dbColumn": "verrechnet_brutto",
            "view": "custom:views/fields/verrechnet-auftrag",
            "isCustom": true,
            "default": 0
        },
        "pdfUrl": {
            "type": "url",
            "isCustom": true
        },
        "auftragsbestaetigungGesendetAm": {
            "notNull": false,
            "type": "datetime",
            "minuteStep": 30,
            "isCustom": true
        },
        "auftragsbestaetigungGesendetVon": {
            "type": "link"
        },
        "labelSummeRechnungen": {
            "type": "enum",
            "options": [
                ""
            ],
            "style": {
                "": null
            },
            "maxLength": 100,
            "isCustom": true,
            "readOnly": true
        },
        "labelBezahlt": {
            "type": "enum",
            "readOnly": true,
            "options": [
                ""
            ],
            "style": {
                "": null
            },
            "maxLength": 100,
            "isCustom": true
        },
        "bezahltNetto": {
            "notNull": false,
            "type": "float",
            "default": 0,
            "isCustom": true
        },
        "bezahltBrutto": {
            "notNull": false,
            "type": "float",
            "default": 0,
            "isCustom": true
        },
        "labelRestbetrag": {
            "type": "enum",
            "options": [
                ""
            ],
            "style": {
                "": null
            },
            "readOnly": true,
            "maxLength": 100,
            "isCustom": true
        },
        "restbetragNetto": {
            "notNull": false,
            "type": "float",
            "default": 0,
            "view": "custom:views/fields/restbetrag-auftrag",
            "isCustom": true
        },
        "restbetragBrutto": {
            "notNull": false,
            "type": "float",
            "default": 0,
            "view": "custom:views/fields/restbetrag-auftrag",
            "isCustom": true
        },
        "einleitung": {
            "type": "text",
            "rowsMin": 2,
            "cutHeight": 200,
            "default": "Sehr geehrte Damen und Herren,\n\nwir bedanken uns für die Erteilung Ihres Auftrages und bestätigen hiermit den Eingang sowie die Annahme.\nNachfolgend erhalten Sie die Auftragsbestätigung mit den vereinbarten Leistungen und Konditionen.\n\nSollten Sie Rückfragen oder Änderungswünsche haben, steht Ihnen Ihr persönlicher Ansprechpartner jederzeit gerne zur Verfügung:\n\nIhr Ansprechpartner: Tobias Schiller\nE-Mail: schiller@klesec.de\nTel.: 0171 6969930\n\nBitte richten Sie weitere Korrespondenz zu diesem Auftrag ebenfalls an: schiller@klesec.de\n\nDie Auftragsbestätigung umfasst die nachstehenden Positionen sowie die aufgeführten Hinweise.",
            "isCustom": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "assignedUser": {
            "type": "belongsTo",
            "entity": "User"
        },
        "teams": {
            "type": "hasMany",
            "entity": "Team",
            "relationName": "entityTeam",
            "layoutRelationshipsDisabled": true
        },
        "account": {
            "type": "belongsTo",
            "foreign": "cAuftrags",
            "entity": "Account",
            "audited": false,
            "isCustom": true
        },
        "rechnungs": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CRechnung",
            "audited": false,
            "isCustom": true
        },
        "lieferscheins": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CLieferschein",
            "audited": false,
            "isCustom": true
        },
        "angebots": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CAngebot",
            "audited": false,
            "isCustom": true
        },
        "auftragsbestaetigungGesendetVon": {
            "type": "belongsTo",
            "foreign": "cAuftrags",
            "entity": "User",
            "audited": false,
            "isCustom": true
        },
        "auftragspositions": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CAuftragsposition",
            "audited": false,
            "isCustom": true
        },
        "werkzeugs": {
            "type": "hasMany",
            "relationName": "cWerkzeugAuftrag",
            "foreign": "auftrags",
            "entity": "CWerkzeug",
            "audited": false,
            "isCustom": true
        },
        "briefs": {
            "type": "hasMany",
            "foreign": "auftrag",
            "entity": "CBrief",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "auftragsnummer",
        "order": "desc",
        "textFilterFields": [
            "name"
        ],
        "fullTextSearch": false,
        "countDisabled": false
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
    },
    "optimisticConcurrencyControl": false
}